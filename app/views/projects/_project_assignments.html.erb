<div class="card">
	<div class="card-content">
		<span class="card-title">
		Project Assignments</span>

<table class="table">
  <thead>
    <tr>
      <th>Person</th>
      <th>Options</th>
      <th>&nbsp;&nbsp;
        <%= link_to(new_assignment_path(:id => @project.id), :class => 'button tiny radius primary') do %>
				<i class="material-icons" title="Assign Person">person_add</i>&nbsp;&nbsp;
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @project_assignments.each do |assignment| %>
      <tr>
        <td>
					<%= link_to assignment.user.proper_name, user_path(assignment.user) %>
				</td>
        <td colspan="2">
					<% if assignment.active %>
						<%= link_to(edit_assignment_path(assignment, status: 'deactivate_prj'), class: 'button tiny radius secondary') do %>
						<i class="material-icons" title="Make Inactive">pause_circle_outline</i>&nbsp;&nbsp;
            <% end %>
					<% else %>
						<%= link_to(edit_assignment_path(assignment, status: 'activate_prj'), class: 'button tiny radius success') do %>
						<i class="material-icons" title="Make Active">pause_circle_filled</i>&nbsp;&nbsp;

            <% end %>
					<% end %>
					<%= link_to(assignment_path(assignment), method: 'delete', data: { confirm: "Are you sure you want to destroy this assignment?" }, class: 'button tiny radius alert') do %>
           <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @project_assignments, previous_label: "<i class='material-icons'>navigate_before</i>", next_label: "<i class='material-icons'>navigate_next</i>" %>


<%# link_to 'Assign New Person', new_assignment_path(:id => @project.id), :class => 'btn btn-small btn-primary' %>

</div></div>
