<h3>Welcome,
	<%= current_user.proper_name %></h3>

<div class="row">
	<div class="col s7">

<div class="card">
	<div class="card-content">
		<span class="card-title">
			My Projects</span>
		<% if @projects.nil? || @projects.empty? %>
			<p>You have no projects at this time</p>
		<% else %>
			<div id="display_projects">
				<%= render :partial => 'partials/project_item', :collection => @projects %>
			</div>
		<% end %>
		<p>&nbsp;</p>

		<%= render :partial => "partials/add_new_object", locals: {model_name: 'project'} %>
	</div>
</div>
</div>
<div class="col s5">
<div class="card">
	<div class="card-content">
		<span class="card-title">
			Incomplete Tasks</span>
		<% if @incomplete_tasks.empty? %>
			<p>You have no incomplete tasks at this time.</p>
		<% else %>
			<div id="display_tasks">
				<table class="table">
				  <thead>
				    <tr><th>Task</th></tr>
				  </thead>
				  <tbody>
						<%= render :partial => 'partials/task_item', :collection => @incomplete_tasks %>
					</tbody>
					</table>
			<%= will_paginate @incomplete_tasks, previous_label: "<i class='material-icons'>navigate_before</i>", next_label: "<i class='material-icons'>navigate_next</i>" %>

			</div>
		<% end %>
		<p>&nbsp;</p>
		<%= render :partial => "partials/add_new_object", locals: {model_name: 'task'} %>
	</div>
</div>
</div></div>
